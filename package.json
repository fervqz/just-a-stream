{
    "name": "@fervqz/just-a-stream",
    "author": "fervqz",
    "description": "A light weight js library for creating, transforming and merging streams.",
    "version": "1.0.3",
    "license": "MIT",
    "homepage": "https://github.com/fervqz/just-a-stream",
    "repository": {
        "url": "git+https://github.com/fervqz/just-a-stream.git"
    },
    "scripts": {
        "update": "pnpm changeset",
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "lint": "tsc",
        "test": "jest"
    },
    "keywords": [
        "stream",
        "streams",
        "async",
        "data",
        "flow",
        "event-driven",
        "non-blocking",
        "buffer",
        "pipeline",
        "transform"
    ],
    "files": [
        "dist",
        "LICENSE.txt",
        "package.json",
        "README.md"
    ],
    "jest": {
        "transform": {
            "^.+\\.jsx?$": "babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "tsup": "^8.0.2",
        "typescript": "^5.4.3"
    },
    "engines": {
        "node": ">=16"
    },
    "packageManager": "pnpm@8.15.5",
    "bugs": {
        "url": "https://github.com/fervqz/just-a-stream/issues"
    },
    "contributors": [
        {
            "name": "Fervqz",
            "url": "https://github.com/fervqz"
        }
    ]
}